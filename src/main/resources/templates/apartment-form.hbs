    </ul>
    <div class="container">
        <div class="row min-vh-100 text-center justify-content-center align-items-center flex-column" id="signup">
            <h1>APARTMENTS</h1>
            <form action="/Apartments/new" method="post">
                <div class="form-group">
                    <input type="text" name="name" id="name" placeholder="Name..." required>
                </div>
                <br>
                <div class="form-group">
                    <input type="text" name="location" id="location" placeholder="Location" required>
                </div>
                <br>
                <div class="form-group">
                    <input type="number" name="numberOfRooms" id="numberOfRooms" placeholder="Number of rooms in each apartment..." required>
                </div>
                <br>
                <div class="form-group">
                    <input type="number" name="numberOfFloors" id="numberOfFloors" placeholder="Number of floors in each apartment..." required>
                </div>
                <br>
                <div class="form-group">
                    <label for="type">Select apartment type</label>
                    <select class="type" name="type" id="type">
                        <option>  </option>
                        <option>One Bedroom</option>
                        <option>Bedsitter</option>
                    </select>
                </div>
                <br>
                <button type="submit">Save apartment</button>
            </form>
        </div>
    </div>

{{/partial}}
